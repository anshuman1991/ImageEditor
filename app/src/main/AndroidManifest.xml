<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anshuman.imageeditor" >

    <application
        android:allowBackup="true"
        android:name="com.anshuman.imageeditor.EditingApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <provider
            android:name="com.aviary.android.feather.sdk.internal.cds.AviaryCdsProvider"
            android:authorities="${applicationId}.AviaryCdsProvider"
            android:exported="false"
            android:process=":aviary_cds" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <uses-permission android:name="android.permission.VIBRATE" />
        <!-- To access Google+ APIs: -->
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.CAMERA" />

        <!--
         To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
         option is required to comply with the Google+ Sign-In developer policies
        -->
        <uses-permission android:name="android.permission.USE_CREDENTIALS" />

        <!-- To retrieve the account name (email) as part of sign-in: -->
        <uses-permission android:name="android.permission.GET_ACCOUNTS" />

        <!-- To auto-complete the email text field in the login form with the user's emails -->
        <uses-permission android:name="android.permission.READ_PROFILE" />
        <uses-permission android:name="android.permission.READ_CONTACTS" />
        <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    </application>

</manifest>
